generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
}

model User {
  id            String       @id @default(uuid())
  name          String
  email         String       @unique
  password_hash String
  role          Role
  completions   Completion[]

  @@map("users")
}

model Task {
  id                String       @id @default(uuid())
  title             String
  monthly_frequency Int          @default(1)
  completions       Completion[]

  @@map("tasks")
}

model Completion {
  id           String   @id @default(uuid())
  image        String
  completed_at DateTime @default(now())

  task   Task   @relation(fields: [taskId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
  userId String
  taskId String

  @@map("completions")
}
